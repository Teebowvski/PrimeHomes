@model Property


      
     
        <div class="col-lg-4 col-md-6 mb-4 col-sm-12">
        <div class="card">
          <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-mdb-ripple-color="light">
            <img src="@Model.ImageUrl"
              class="w-100" />
            <a asp-controller="Property" asp-action="ProductDetails" asp-route-id="@Model.Id"> 
                <div class="mask">
                <div class="d-flex justify-content-start align-items-end h-100">
               <p>  @if ( @Model.Stock.Name == "Unavailable")
                  
                        {
                             <h5><span class="badge bg-danger ms-2">Unavailable</span></h5>
                                
                            }
                            else if(@Model.Stock.Name == "Available")
                            {
                               
                                <h5><span class="badge bg-success ms-2">Available</span></h5>
                            }
                        </p>
                    </div>
              </div>
              <div class="hover-overlay">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
              </div>
            </a>
          </div>
         <div class="card text-center" >
  <div class="card-body text-center">
   <a asp-controller="Property" asp-action="ProductDetails" asp-route-id="@Model.Id"><h5 class="card-title text-center text-reset" >@Model.Name</h5> </a>
    <div class="d-flex justify-content-center " style="margin-bottom:5px;gap:60px;">
        <h6 class="card-subtitle text-muted  "><i class="fa-solid fa-location-dot"></i> @Model.Area.Name</h6>
        
        <h6 class="card-subtitle  text-muted "><i class="fa-solid fa-sliders"></i> @Model.Type.Name</h6>
        
        </div>
        <div class="d-flex justify-content-center " style="margin-bottom:5px;gap:25px;">
        <h6 class="card-subtitle  text-muted "><i class="fa-solid fa-bath"></i> @Model.Bathrooms.Number Bathrooms</h6>
        <h6 class="card-subtitle  text-muted "><i class="fa-solid fa-bed"></i> @Model.Bedrooms.Number Bedrooms</h6>
        </div>
        
   <div> <p class="card-text " style="margin-bottom:5px;">@Model.Description.</p></div>  
    <div class="d-flex justify-content-center " style="gap:5px;">
        <h5 class="mb-3 price">Starting Price:</h5>
        <h5 class="mb-3 price">$@Model.Price</h5>
    </div>
   
  </div>
</div>
        </div> 
        
      </div>
    

  