
@model PropertyListViewModel


  <main class="my-5">
     
      <div class="container">
           <a asp-controller="Blogs" asp-action="Blogs"><h2 class="pb-2 border-bottom">Blogs</h2></a>
     
        <section>
          <div class="row gx-5">

                @if (!Model.Blogs.Any())
            {
                <h5 class="text-center">BlogPosts coming soon...</h5>
            }
              @foreach (var item in Model.Blogs.Take(3))
             {
                 <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
              <!-- News block -->
              <div>
                <!-- Featured image -->
                <div class="bg-image hover-overlay shadow-1-strong ripple mb-4" data-ripple-color="light">
                  <img src="https://mdbootstrap.com/img/new/fluid/city/113.jpg" class="img-fluid" />
                  <a asp-controller="Blogs" asp-action="MainBlog" asp-route-id="@item.id">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                  </a>
                </div>

                <!-- Article data -->
                <div class="row mb-3">
                  <div class="col-6">
                    <a href="" class="text-info">
                      <i class="fas fa-house"></i>
                      Real Estate
                    </a>
                  </div>

                  <div class="col-6 text-right">
                    <u> @item.DateCreated.Date.ToShortDateString()</u>
                  </div>
                </div>

                <!-- Article title and description -->
                <a href="" class="text-dark">
                  <h5 class="Text-center">@item.Title</h5>

                  <p>
                    @item.Content<a asp-controller="Blogs" asp-action="MainBlog" asp-route-Id=@item.id> Read More..</a>
                  </p>
                </a>

             </div>
            </div>

             }
           
            
           
          </div>
        </section>
        

          </div>
       
    </main>
    <!--Main layout-->