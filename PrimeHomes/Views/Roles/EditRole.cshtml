 @model EditRoleViewModel
 @{ViewBag.Title = "Edit Role";

    Layout = "_AdminLayout";}



 <form method="post" class="mt-3">
     <div asp-validation-summary="All" class="text-danger"></div>
     <div class="form-group row">
         <label asp-for="Id" class="col-sm-2 col-form-label"></label>
         <div class="col-sm-10">
             <Input asp-for="Id" class="form-control" readonly />
         </div>
     </div>
      <div class="form-group row">
         <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
         <div class="col-sm-10">
             <Input asp-for="RoleName"  class="form-control" />
           <span asp-validation-for="RoleName" class="text-danger"></span>
         </div>
     </div>
     

     <div class="form-group row">
        
         <div class="col-sm-10">
           
             <a asp-action="Index" class="btn btn-primary">Back to List</a>
              <button type="submit" class="btn btn-outline-primary">Update</button>
         </div>
     </div>
     <div class="card">
         <div class="card-header">
             <h3>Users in this Role</h3>
         </div>
         <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var item in Model.Users)
                {
                    <h5 class="card-title">@item</h5>
                }

            }
            else{<h5 class="card-title">None at this moment</h5>}
        </div>
                  <div class="card-footer">
                      <a asp-controller="Roles" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary"> <i class="fa-solid fa-user-plus"></i> Add Users or Remove Users</a>
                        
         </div>
     </div>
 </form>