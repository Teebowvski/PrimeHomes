@model IEnumerable<PrimeHomes.Models.Blog>

@{
    ViewData["Title"] = "List of BlogPosts";
    Layout = "_AdminLayout";
}



 <div class="row d-flex justify-content-center">
    <div class="col-md-12">
        <a class="btn btn-primary float-right" asp-action="Create">   <i class="fa-solid fa-blog"></i> Create new BlogPost</a>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.BlogImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.AuthorImageUrl)
            </th>
           
            
           
           
           
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                <img class="rounded-circle" style="width: 65px;" src="@item.BlogImageUrl">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @item.DateCreated.ToString("MM/dd/yyyyy")
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
             <td>
                <img class="rounded-circle" style="width: 65px;" src="@item.AuthorImageUrl">
            </td>
           
            
            
          
           
           
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>