@model PropertyListViewModel

@{
    Layout = "_BootstrappLayout";
}


  <!-- Jumbotron -->
    <div id="intro" class="p-5 text-center bg-light">
      <h1 class="mb-3 h2 "><span class="text-primary">PrimeHomes</span> Main Blog</h1>
      <p class="mb-3 ">Looking for a new home with a view? choose our luxury apartments.</p>
      <a class="btn btn-primary m-2" asp-controller="Property" asp-action="List"  role="button" 
        >Take a look at our Properties</a>
      <a class="btn btn-primary m-2" asp-controller="Contact" asp-action="Index"
        role="button">Contact Us</a>
    </div>
    <!-- Jumbotron -->
     <main class="my-5">
    <div class="container">
         <section class="text-center">
        
       <div class="row"> 
@if (Model.Blogs == null)
{
    <h4>BlogPosts coming soon..</h4>
}

    <h4 class="mb-5"><strong>Latest posts</strong></h4>
@foreach (var item in Model.Blogs) {
      
      
          <div class="col-lg-4 col-md-12 mb-4">
            <div class="card">
              <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                <img src="@item.BlogImageUrl" class="img-fluid" />
                <a href="#!">
                  <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
              </div>
              <div class="card-body">
                   <div class="row mb-3">
                        <div class="col-6 float-left">
                    <a  class="text-info">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
  <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z"/>
</svg>
                      Real Estate
                    </a>
                    </div>
                       <div class="col-6  float-right">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-date" viewBox="0 0 16 16">
  <path d="M6.445 11.688V6.354h-.633A12.6 12.6 0 0 0 4.5 7.16v.695c.375-.257.969-.62 1.258-.777h.012v4.61h.675zm1.188-1.305c.047.64.594 1.406 1.703 1.406 1.258 0 2-1.066 2-2.871 0-1.934-.781-2.668-1.953-2.668-.926 0-1.797.672-1.797 1.809 0 1.16.824 1.77 1.676 1.77.746 0 1.23-.376 1.383-.79h.027c-.004 1.316-.461 2.164-1.305 2.164-.664 0-1.008-.45-1.05-.82h-.684zm2.953-2.317c0 .696-.559 1.18-1.184 1.18-.601 0-1.144-.383-1.144-1.2 0-.823.582-1.21 1.168-1.21.633 0 1.16.398 1.16 1.23z"/>
  <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
</svg> <u>@item.DateCreated.Date.ToShortDateString()</u>
                  </div>
                  </div>
                <h5 class="card-title">@item.Title</h5>
                  
                <p class="card-text">
                  @item.Content
                </p>
                <a asp-controller="Blogs" asp-action="MainBlog" asp-route-id="@item.id" class="btn btn-primary">Read</a>
              </div>
            </div>
          </div>

}
  </div>
      </section>
  </div>
  </main>  
  <partial name="_Footer" />
